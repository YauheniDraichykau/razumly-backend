datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  name      String?
  googleId  String? @unique
  avatar    String?
  createdAt DateTime @default(now())
  documents Document[]
}

model Document {
  id            String   @id @default(uuid())
  type          DocumentType
  originalText  String
  simplified    String?
  status        Status    @default(PENDING)
  createdAt     DateTime  @default(now())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
}

enum DocumentType {
  MEDICAL
  FINANCIAL
  LEGAL
  GENERAL
}

enum Status {
  PENDING
  COMPLETED
  FAILED
}
